@require "jeet"

html, body
  height 100%

html
  position relative
  min-height 100%
  
body
  margin 0
  font-family: Montserrat,"Helvetica Neue",Helvetica,Roboto,Arial,sans-serif;
  font-weight 300
  font-size 15px
  background-color bg_color
  display table
  width 100%

.page-row
  display table-row
  height 1px

header, .container
  max-width md_size
  width 90%
  margin 0 auto

header
  a
    text-decoration none

.main-wrapper
  @extend .page-row
  height 100%

footer
  @extend .page-row
  background-color accent_color
  text-align center
  margin-top 2em
  p
    padding 10px
    margin 0

p 
  color text_color

.container
  margin 0 auto
  width 90%

.color-csi
  color csi_color

.color-pink
  color pink_color
  
